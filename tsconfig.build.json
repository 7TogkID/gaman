{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "ES2020",
		"moduleResolution": "bundler",
		"rootDir": "./src/",
		"outDir": "./dist",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,

		"typeRoots": ["src", "./node_modules/@types"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.test.*"],
	"tsc-alias": {
		"resolveFullPaths": true,
		"verbose": false
	}
}
