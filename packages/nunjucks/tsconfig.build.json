{
	"extends": "../tsconfig.build.json",
	"compilerOptions": {
		"outDir": ".",
		"rootDir": ".",
		"paths": {
			"@gaman/common": ["../common"],
			"@gaman/common/*": ["../common/*"],
			"@gaman/core": ["../core"],
			"@gaman/core/*": ["../core/*"]
		}
	},
	"exclude": ["node_modules", "dist", "test/**/*", "**/*.test.*"],
	"references": [
		{
			"path": "../common/tsconfig.build.json"
		},
		{
			"path": "../core/tsconfig.build.json"
		}
	]
}
