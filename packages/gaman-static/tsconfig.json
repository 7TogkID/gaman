{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "declaration": true, // Menghasilkan file .d.ts
    "emitDeclarationOnly": true, // Hanya menghasilkan file .d.ts tanpa file .js
    "target": "esnext", // Target JavaScript output
    "strict": true, // Mengaktifkan mode ketat untuk pengetikan
    "skipLibCheck": true // Melewatkan pengecekan tipe untuk file library
  },
  "include": ["index.ts"]
}
