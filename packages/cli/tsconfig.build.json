{
	"extends": "../tsconfig.build.json",
	"compilerOptions": {
		"outDir": ".",
		"rootDir": ".",
		"paths": {
			"@gaman/common": ["../common"],
			"@gaman/common/*": ["../common/*"]
		}
	},
	"exclude": ["node_modules", "dist", "test/**/*", "**/*.test.*"],
	"references": [
		{
			"path": "../common/tsconfig.build.json"
		}
	],
	"tsc-alias": {
		"resolveFullPaths": true,
		"verbose": false
	}
}
