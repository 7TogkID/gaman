{
  "name": "@gaman/ejs",
  "version": "0.0.14",
  "description": "EJS integration for GamanJS framework",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build:cjs": "bun build ./index.ts --outdir ./dist/cjs --format cjs --external gaman",
    "build:esm": "bun build ./index.ts --outdir ./dist --target node --external gaman --external ejs",
    "build": "rm -rf dist && npm run build:esm && tsc"
  },
  "keywords": [
    "ejs",
    "Javascript",
    "typescript",
    "gamanjs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "angga7togk",
  "license": "ISC",
  "repository": {
    "url": "https://github.com/7TogkID/gaman"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "gaman": "^0.0.38",
    "typescript": "^5"
  },
  "peerDependencies": {
    "ejs": "^3.1.9"
  }
}
